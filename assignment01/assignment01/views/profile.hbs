<div class="flex items-center justify-center bg-white">
  <div class="w-full max-w-md px-6 py-8">
    <h1 class="text-2xl font-bold text-gray-900 text-center mb-6">Profile</h1>

    <div class="rounded-xl border border-gray-200">
      <dl class="divide-y divide-gray-200">
        <div class="px-4 py-3 flex gap-3">
          <dt class="w-28 shrink-0 text-sm font-medium text-gray-700">Name</dt>
          <dd class="text-sm text-gray-900">{{applicant.name}}</dd>
        </div>

        <div class="px-4 py-3 flex gap-3">
          <dt class="w-28 shrink-0 text-sm font-medium text-gray-700">Email</dt>
          <dd class="text-sm text-gray-900 break-all">{{applicant.email}}</dd>
        </div>

        <div class="px-4 py-3 flex gap-3">
          <dt class="w-28 shrink-0 text-sm font-medium text-gray-700">Phone</dt>
          <dd class="text-sm text-gray-900">{{applicant.phone}}</dd>
        </div>

        <div class="px-4 py-3 flex gap-3">
          <dt class="w-28 shrink-0 text-sm font-medium text-gray-700">Position</dt>
          <dd class="text-sm text-gray-900">{{applicant.position}}</dd>
        </div>

        {{#if applicant.resumePath}}
        <div class="px-4 py-3 flex gap-3">
          <dt class="w-28 shrink-0 text-sm font-medium text-gray-700">Resume</dt>
          <dd class="text-sm text-gray-900 truncate" title="{{applicant.resumePath}}">
            <span class="text-gray-600">Saved at:</span>
            <code class="ml-1 px-1.5 py-0.5 rounded bg-gray-100 text-gray-800 font-mono text-xs">
              {{applicant.resumePath}}
            </code>
          </dd>
        </div>
        {{/if}}
      </dl>
    </div>

    <form method="get" action="/" class="mt-4 space-y-3">
      <button type="submit"
              class="w-full px-4 py-2 bg-black text-white font-semibold rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-400">
        Go To Home Page
      </button>
    </form>
  </div>
</div>
