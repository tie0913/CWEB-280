<div class="flex items-center justify-center bg-white">
  <div class="w-full max-w-md px-6 py-8">
    <h1 class="text-2xl font-bold text-gray-900 text-center mb-6">Sign up</h1>

    {{#if error}}
    <div role="alert" class="text-red-600 mb-4 text-center">
      {{error}}
    </div>
    {{/if}}

    <div id="clientErrors" class="text-red-600 mb-4 text-center"></div>

    <form id="signupForm" method="POST" action="/signup" enctype="multipart/form-data" novalidate class="space-y-4">
      <!-- Full name -->
      <div>
        <label for="fullname" class="block text-sm font-medium text-gray-700 mb-1">Full name</label>
        <input id="fullname"
               name="fullname"
               type="text"
               required
               placeholder="Nguyen Tran"
               value="{{form.fullname}}"
               class="w-full px-3 py-2 rounded-md border border-gray-300 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input id="email"
               name="email"
               type="email"
               required
               placeholder="you@example.com"
               value="{{form.email}}"
               class="w-full px-3 py-2 rounded-md border border-gray-300 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <!-- Phone -->
      <div>
        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
        <input id="phone"
               name="phone"
               type="text"
               required
               placeholder="+1 (306) 555-1234"
               value="{{form.phone}}"
               pattern="^[\d\s()+\-]{7,20}$"
               title="Use digits and (), +, -, spaces. 7–20 characters."
               class="w-full px-3 py-2 rounded-md border border-gray-300 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <!-- Position -->
      <div>
        <label for="position" class="block text-sm font-medium text-gray-700 mb-1">Position</label>
        <input id="position"
               name="position"
               type="text"
               required
               placeholder="Junior Android Developer"
               value="{{form.position}}"
               class="w-full px-3 py-2 rounded-md border border-gray-300 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input id="password"
               name="password"
               type="password"
               required
               minlength="6"
               placeholder="At least 6 characters"
               class="w-full px-3 py-2 rounded-md border border-gray-300 text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <!-- Resume -->
      <div>
        <label for="resume" class="block text-sm font-medium text-gray-700 mb-1">Resume (PDF, ≤ 2MB)</label>
        <input id="resume"
               name="resume"
               type="file"
               accept=".pdf,application/pdf"
               required
               class="w-full text-sm text-gray-700 file:mr-3 file:py-2 file:px-4 file:rounded-md file:border-0 file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200" />
        <p class="mt-1 text-xs text-gray-500">
          Only PDF files are accepted. Max size 2MB.
        </p>
      </div>

      <!-- Submit -->
      <button type="submit"
              class="w-full px-4 py-2 bg-black text-white font-semibold rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-400">
        Create account
      </button>
    </form>

    <p class="mt-4 text-sm text-gray-600 text-center">
      Already have an account?
      <a href="/signin" class="font-semibold text-blue-600 hover:underline">
        Sign in
      </a>
    </p>
  </div>
</div>

<script src="/js/signup-validate.js"></script>
